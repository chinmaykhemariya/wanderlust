<% layout("layouts/boilerplate") %>
<script>
   mapToken="<%=process.env.MAP_TOKEN%>";
  userListings=<%-JSON.stringify(userListings)%>;

</script>
   <div class="row mt-3">
      <div class="col-8 offset-3 mb-3 list-detail" >
    <h3><%= userListings.title %></h3></div>
  <div class="card col-6 mb-1 offset-3 show-card listing-card">
      <img src="<%= userListings.image.url%>"   class="card-img-top show-img" alt="...">
      <div class="card-body">
            <p class="card-text mt-1 mb-1"><i>Owned By~<%= userListings.owner.username%></i></p>
            <p class="card-text mt-1 mb-1"><%= userListings.description %></p>
            <p class="card-text mt-1 mb-1">&#8377;<%= userListings.price.toLocaleString("en-IN") %> </p>
            <p class="card-text mt-1 mb-1"><%= userListings.location%> </p>
            <p class="card-text mt-1 mb-1"><%= userListings.country %> </p>
            <p class="card-text mt-1 mb-1"><%= userListings.address%> </p>
      </div>
 <% if(user && (user._id.equals(userListings.owner._id))) {%>
    <div class="row">
             <div class="col-2 mt-2 ">
    <form action="/listings/<%=userListings._id %>/edit" method="get" ><button class="btn btn-outline-success show-btn">edit</button></form>
             </div>

             <div class="col-2 mt-2">
       <form action="/listings/<%=userListings._id %>?_method=delete"  method="post"><button class="btn btn-outline-danger show-btn">delete</button></form>
             </div>
    </div>
 <%}%>
  </div>
   
<div class="col-8 offset-3 mb-3  list-detail ">
  <%if( user) {%>
  <hr>
  <h4>Leave a review</h4>
  <form action="/listings/<%=userListings._id %>/reviews" method="post"  class=" needs-validation" novalidate>
   <!-- <div class="mb-1 mt-3" >
      <label for="rating" class="form-label">Rating</label>
      <input type="range" min="1" max="5" id="rating" name="review[rating]"class="form-range">
    </div>-->
  <div class="mb-1 mt-3" >
    <label for="rating" class="form-label">Rating</label>
  <fieldset class="starability-slot "  >
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
  </fieldset>
</div>
    <div class="mb-3 mt-1">
      <label for="comment" class="form-label">Comment</label>
      <textarea name="review[comment]" id="comment" cols="30" rows="5"class="form-control" required></textarea>
      <div class="valid-feedback">
        Looks good!
        </div>
        <div class="invalid-feedback">
         Please provide the review.
        </div>
    </div>
    <button class="btn btn-outline-dark ">Submit</button>
  </form> 
  <% } %>
  <hr>
  <% if(userListings.reviews.length){ %>
  <p><b>All Reviwes</b></p>
<div class="row">
  <%for(i of userListings.reviews){
    %>
   <div class="card col-5 mb-3 ms-3 me-3">
      <div class="card-body">
     <h5 class="card-title">@<%=i.author.username %> </h5>
      <p class="starability-result card-text mb-2" data-rating="<%=i.rating%>"></p> 
      <p class="card-text mb-1"><%=i.comment%></p>  
    
    <%if(user &&  i.author._id.equals(user._id)){%>
        <form action="/listings/<%=userListings._id %>/reviews/<%=i._id%>?_method=delete" method="post" class="mb-3 mt-2">
        <button class="btn btn-outline-danger btn-sm ">Delete</button>
        </form>
    <% } %>
    </div>
      </div>
  <% } %>
</div><hr>
<% } %>
</div>
<div class="col-8 offset-3 mb-3">
        <h3>Where you will be</h3>
        <div id="map"></div>
</div>
</div>
<script src="/js/map.js"></script>
